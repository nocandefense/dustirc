{
  "name": "dustirc",
  "displayName": "dust",
  "description": "An IRC client for Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "node": "22.x",
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dustirc.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "dustirc.connect",
        "title": "Dust: Connect"
      },
      {
        "command": "dustirc.say",
        "title": "Dust: Say..."
      },
      {
        "command": "dustirc.openOutput",
        "title": "Dust: Open Output"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p tsconfig.tests.json",
    "watch-tests": "tsc -p tsconfig.tests.json -w",
    "test:unit": "mocha -u tdd -r ts-node/register 'test/**/*.test.ts'",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm run test:unit",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint:md": "markdownlint -c .markdownlint.json README.md",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prepare": "husky install",
    "test": "vscode-test",
    "package-vsix": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "markdownlint-cli": "^0.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "nyc": "^15.1.0",
    "vsce": "^2.15.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "overrides": {
    "micromatch": "^4.0.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}