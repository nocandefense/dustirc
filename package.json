{
  "name": "dustirc",
  "displayName": "dust",
  "description": "An IRC client for Visual Studio Code.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/nocandefense/dustirc.git"
  },
  "engines": {
    "node": "22.x",
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "dustirc.autoReconnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically try to reconnect when the connection is lost."
        }
      }
    },
    "commands": [
      {
        "command": "dustirc.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "dustirc.connect",
        "title": "Dust: Connect"
      },
      {
        "command": "dustirc.say",
        "title": "Dust: Say..."
      },
      {
        "command": "dustirc.sayTo",
        "title": "Dust: Say to Channel..."
      },
      {
        "command": "dustirc.join",
        "title": "Dust: Join Channel"
      },
      {
        "command": "dustirc.part",
        "title": "Dust: Leave Channel"
      },
      {
        "command": "dustirc.ping",
        "title": "Dust: Ping"
      },
      {
        "command": "dustirc.reconnect",
        "title": "Dust: Reconnect"
      },
      {
        "command": "dustirc.disconnect",
        "title": "Dust: Disconnect"
      },
      {
        "command": "dustirc.identify",
        "title": "Dust: Identify with NickServ"
      },
      {
        "command": "dustirc.openOutput",
        "title": "Dust: Open Output"
      },
      {
        "command": "dustirc.openRoom",
        "title": "Dust: Open Room"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dustirc.rooms",
          "name": "Dust Rooms"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p tsconfig.tests.json",
    "watch-tests": "tsc -p tsconfig.tests.json -w",
    "test:unit": "mocha -u tdd -r ts-node/register 'test/**/*.test.ts'",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm run test:unit",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint:md": "markdownlint -c .markdownlint.json README.md docs/**/*.md",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prepare": "husky install",
    "check:no-compiled": "node ./scripts/check-for-compiled.js",
    "test": "vscode-test",
    "branch:start": "bash scripts/start-feature.sh",
    "branch:finish": "bash scripts/finish-feature.sh",
    "package-vsix": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^10.0.14",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^13.0.0",
    "markdownlint-cli": "^0.34.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "overrides": {
    "micromatch": "^4.0.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}