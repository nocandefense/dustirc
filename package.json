{
  "name": "dustirc",
  "displayName": "Dust IRC",
  "description": "A functional IRC client for Visual Studio Code with real network connectivity, channel management, and TLS support.",
  "version": "0.0.1",
  "license": "MIT",
  "icon": "dustirc-logo.png",
  "publisher": "nocandefense",
  "repository": {
    "type": "git",
    "url": "https://github.com/nocandefense/dustirc.git"
  },
  "bugs": {
    "url": "https://github.com/nocandefense/dustirc/issues"
  },
  "homepage": "https://github.com/nocandefense/dustirc#readme",
  "engines": {
    "node": "22.x",
    "vscode": "^1.105.0"
  },
  "categories": [
    "Chat"
  ],
  "keywords": [
    "irc",
    "chat",
    "messaging",
    "communication",
    "network",
    "channel"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Dust IRC",
      "properties": {
        "dustirc.autoReconnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically try to reconnect when the connection is lost."
        },
        "dustirc.connection.defaultHost": {
          "type": "string",
          "default": "",
          "description": "Default IRC server hostname (e.g., irc.libera.chat)"
        },
        "dustirc.connection.defaultPort": {
          "type": "number",
          "default": 6697,
          "minimum": 1,
          "maximum": 65535,
          "description": "Default IRC server port"
        },
        "dustirc.connection.defaultNickname": {
          "type": "string",
          "default": "",
          "description": "Default IRC nickname"
        },
        "dustirc.connection.defaultUsername": {
          "type": "string",
          "default": "",
          "description": "Default IRC username (leave empty to use nickname)"
        },
        "dustirc.connection.timeout": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "Connection timeout in milliseconds"
        },
        "dustirc.connection.forceTLS": {
          "type": "boolean",
          "default": false,
          "description": "Always use TLS connections, regardless of port"
        },
        "dustirc.reconnect.maxAttempts": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 20,
          "description": "Maximum number of auto-reconnect attempts (0 = unlimited)"
        },
        "dustirc.reconnect.delay": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "maximum": 60000,
          "description": "Delay between reconnect attempts in milliseconds"
        },
        "dustirc.ui.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show connection status and current channel in status bar"
        },
        "dustirc.ui.createOutputChannels": {
          "type": "boolean",
          "default": true,
          "description": "Create separate output channels for each IRC channel"
        },
        "dustirc.ui.autoOpenOutput": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open output channel when receiving messages"
        },
        "dustirc.channels.autoJoin": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of channels to automatically join on connect (e.g., ['#general', '#dev'])"
        },
        "dustirc.messaging.logToFile": {
          "type": "boolean",
          "default": true,
          "description": "Log outgoing messages to .vscode/dust-outgoing.log"
        },
        "dustirc.messaging.sendRateLimit": {
          "type": "number",
          "default": 200,
          "minimum": 50,
          "maximum": 5000,
          "description": "Milliseconds between sent messages (rate limiting to prevent server bans)"
        }
      }
    },
    "commands": [
      {
        "command": "dustirc.connect",
        "title": "Dust: Connect"
      },
      {
        "command": "dustirc.say",
        "title": "Dust: Say..."
      },
      {
        "command": "dustirc.sayTo",
        "title": "Dust: Say to Channel..."
      },
      {
        "command": "dustirc.join",
        "title": "Dust: Join Channel"
      },
      {
        "command": "dustirc.part",
        "title": "Dust: Leave Channel"
      },
      {
        "command": "dustirc.ping",
        "title": "Dust: Ping"
      },
      {
        "command": "dustirc.reconnect",
        "title": "Dust: Reconnect"
      },
      {
        "command": "dustirc.disconnect",
        "title": "Dust: Disconnect"
      },
      {
        "command": "dustirc.identify",
        "title": "Dust: Identify with NickServ"
      },
      {
        "command": "dustirc.openOutput",
        "title": "Dust: Open Output"
      },
      {
        "command": "dustirc.openRoom",
        "title": "Dust: Open Room"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dustirc.rooms",
          "name": "Dust Rooms",
          "icon": "$(comment-discussion)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p tsconfig.tests.json",
    "watch-tests": "tsc -p tsconfig.tests.json -w",
    "test:unit": "mocha",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm run test:unit",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint:md": "markdownlint -c .markdownlint.json README.md docs/**/*.md",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prepare": "husky install",
    "check:no-compiled": "node ./scripts/check-for-compiled.js",
    "test": "vscode-test",
    "branch:start": "bash scripts/start-feature.sh",
    "branch:finish": "bash scripts/finish-feature.sh",
    "package-vsix": "npx vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^10.0.14",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^13.0.0",
    "markdownlint-cli": "^0.34.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "vsce": "^2.15.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "overrides": {
    "micromatch": "^4.0.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,md}": [
      "eslint --fix",
      "git add"
    ]
  }
}